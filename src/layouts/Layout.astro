---


export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

---

<style is:global>
  :root {
    --accent-color: #BCFE2F;
    --dark-fg: #000;
    --light-fg: #fff;
    --fg: #999999;
    --lighter-fg: #BEBEBE;
    --button-shadow: rgba(188, 254, 47, 0.4);
    --card-bg: #202020;
  }

  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    border-radius: 10px;
    background: rgb(15, 15, 15);

  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background: rgb(53, 53, 53);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    padding: 20px;
    background: radial-gradient(#080800, #232323);
    height: 100vh;
    max-height: 100vh;
    width: 100%;
    overflow: hidden;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  @media (max-width:860px) {
    body {
      overflow-y: auto;
    }
  }

  button {
    border: none;
    outline: none;
    border-radius: 20px;
    padding: 10px;
    background-color: var(--accent-color);
  }

  a {
    text-decoration: none;
    color: inherit;

  }
</style>



<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title>{title}</title>
</head>

<body>
  <slot />
</body>

</html>