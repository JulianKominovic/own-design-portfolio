---
const { weekdayName, number, classes } = Astro.props
---

<style>
  small {
    color: var(--light-fg);
    text-align: center;
    display: block;
    font-size: 11px;
    font-weight: 300;
    text-transform: uppercase;
    position: relative;
    z-index: 1;
  }

  p {
    color: var(--light-fg);
    text-align: center;
    display: block;
    position: relative;
    z-index: 1;
    font-size: 20px;
    font-weight: 600;

  }

  div.active small,
  div.active p {
    color: var(--dark-fg);
  }

  div.active {
    color: var(--dark-fg);
    position: relative;
    z-index: 2;
    background-color: var(--accent-color);
    border-radius: 20px;
    box-shadow: 0 0 30px 0 var(--accent-color);
    padding: 30px 16px;


  }

  div.active:after {
    height: 8px;
    width: 8px;
    background-color: var(--dark-fg);
    content: "";
    display: block;
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 50%;
  }



  div {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    height: 100%;
    padding: 20px 0;
  }
</style>
<div class={classes}>
  <small>{weekdayName}</small>
  <p>{number}</p>
</div>